@addTagHelper *, LazZiya.TagHelpers
@using Store.Application.Services.Finanace.Commands.GetOrderForAdminService
@model OrdersDTO

@{
    ViewData["Title"] = "سفارشات";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}


<div class="content-wrapper">
    <div class="container-fluid">
        <!-- Zero configuration table -->
        <section id="configuration">
            <div class="row">
                <div class="col-12">
                    <div class="card">

                        <div class="card-body collapse show">
                            <div class="card-block card-dashboard">
                                <p class="card-text">سفارشات</p>
                                <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                                    <div class="col-sm-12">
                                        <table class="table table-striped table-bordered zero-configuration dataTable" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                                            <thead>
                                                <tr role="row">
                                                    <th class="sorting_asc">شناسه</th>
                                                    <th class="sorting_asc">شناسه پرداخت</th>
                                                    <th class="sorting_asc">کاربر </th>
                                                    <th class="sorting_asc">تاریخ ثبت </th>
                                                    <th class="sorting_asc">وضعیت</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                @foreach (var item in Model.Orders)
                                                {
                                                    <tr role="row">
                                                        <td>@item.Id</td>
                                                        <td>@item.RequestPayId</td>
                                                        <td>@item.UserId</td>
                                                        <td>@item.DateTime.ToString("yyyy/MM/d")</td>
                                                        <td>@item.OrderState.ToString()</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                                <div class="  text-center">
                                    <paging total-records="Model.Row"
                                            page-no="Model.Page"
                                            page-size="Model.PageSize"
                                            show-prev-next="true"
                                            show-total-pages="false"
                                            show-total-records="false"
                                            show-page-size-nav="true"
                                            show-first-numbered-page="true"
                                            show-last-numbered-page="true"
                                            query-string-key-page-no="Page"
                                            gap-size="2">
                                    </paging>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
@section Scripts
    {
    <link href="~/Sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/Sweetalert2/sweetalert2.min.js"></script>


    <script src="~/js/Product.js"></script>
}
